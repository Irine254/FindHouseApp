<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashScreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/ci_image_id"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/profileicon0"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_upload_id"
                    android:text="upload"
                    android:layout_toRightOf="@id/ci_image_id"
                    android:layout_marginTop="150dp"
                    android:textStyle="italic"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_profile_id"
                    android:text="Please fill in your profile"
                    android:layout_below="@id/ci_image_id"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:textColor="#000000"/>

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_enterfirstname_id"
                android:hint="Enter First Name"
                android:textColor="#000000"
                android:layout_below="@id/tv_profile_id"
                android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enterlastname_id"
                    android:hint="Enter Last Name"
                    android:textColor="#000000"
                    android:layout_below="@id/et_enterfirstname_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>

                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_enterusername_id"
                android:hint="Enter UserName"
                android:textColor="#000000"
                android:layout_below="@id/et_enterlastname_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enterphonenumber_id"
                    android:hint="Enter Phone Number"
                    android:textColor="#000000"
                    android:layout_below="@id/et_enterusername_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_enteremailaddress_id"
                    android:hint="Enter Email Address"
                    android:textColor="#000000"
                    android:layout_below="@id/et_enterphonenumber_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_optional_id"
                    android:text="(Optional)"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:layout_toRightOf="@id/et_enteremailaddress_id"
                    android:layout_below="@id/et_enterphonenumber_id"
                     android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_save_id"
                    android:text="save"
                    android:layout_below="@id/et_enteremailaddress_id"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    />




            </RelativeLayout>






        </ScrollView>





    </LinearLayout>







</RelativeLayout>





